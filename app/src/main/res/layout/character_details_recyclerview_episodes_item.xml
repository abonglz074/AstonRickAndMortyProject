<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/episode_name_in_recyclerview_character_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Episode name"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/episode_number_in_recyclerview_character_details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/episode_number_in_recyclerview_character_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ep. 3"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/episode_name_in_recyclerview_character_details"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/episode_airdate_in_recyclerview_character_details"
        android:text="2017-11-04T18:50:21.651Z"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/episode_name_in_recyclerview_character_details"
        app:layout_constraintTop_toBottomOf="@id/episode_name_in_recyclerview_character_details" />


</androidx.constraintlayout.widget.ConstraintLayout>